{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "win-debug",
            "displayName": "Debug build (Win64)",
            "description": "Build the project with no optimization and assertions enabled.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/pc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/win/toolchain.cmake",
                "GENV_PLATFORM": "PC"
            }
        },
        {
            "name": "win-release",
            "displayName": "Release build (Win64)",
            "description": "Build the project with performance optimization and assertions stripped.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/pc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/win/toolchain.cmake",
                "GENV_PLATFORM": "PC"
            }
        },
        {
            "name": "win-min-size-release",
            "displayName": "Minimum size release build (Win64)",
            "description": "Build the project with size optimization and assertions stripped.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/pc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/win/toolchain.cmake",
                "GENV_PLATFORM": "PC"
            }   
        },
        {
            "name": "psx-debug",
            "displayName": "Debug build (PSX)",
            "description": "Build the project with no optimization and assertions enabled.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/psx",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/PSX/toolchain.cmake",
                "GENV_PLATFORM": "PSX"
            }
        },
        {
            "name": "psx-release",
            "displayName": "Release build (PSX)",
            "description": "Build the project with performance optimization and assertions stripped.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/psx",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/PSX/toolchain.cmake",
                "GENV_PLATFORM": "PSX"
            }
        },
        {
            "name": "psx-min-size-release",
            "displayName": "Minimum size release build (PSX)",
            "description": "Build the project with size optimization and assertions stripped.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/psx",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/PSX/toolchain.cmake",
                "GENV_PLATFORM": "PSX"
            }   
        }
    ],
    "buildPresets": [
        {
            "name": "Debug  (Win64)",
            "description": "Debug  (Win64)",
            "displayName": "Debug  (Win64)",
            "configurePreset": "win-debug"
        }
    ]
}